<!DOCTYPE html>
<html>
<head>
  {{>headerLinks}}
</head>
<body>
 {{>navbar}}
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-mid-10 col-12 mx-auto">
          <div class="row">
            <!-- left container -->
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to weather app</p>
            <h1>Get the Latest <span class="txt-clr">weather</span> Info of your city</h1>
            <a href="/weather"><button>Check Now</button></a>
            </div>
            
            <!-- right container -->
            <div class="col-md-6 col-12 main_header_right">

              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class=" w-100" src="images/gettyimages-1692871520-2048x2048.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class=" w-100" src="images/gettyimages-1692909213-594x594.jpg" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class=" w-100" src="images/gettyimages-1735341927-2048x2048.jpg" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>

      </div>
    </div>
  </div>
  {{>footer}}
</body>
</html>